<UserControl
    MinWidth="500"
    Style="{DynamicResource MaterialDesignRoot}"
    d:DataContext="{d:DesignInstance Type=dialogs:DownloadSingleSetupViewModel}"
    mc:Ignorable="d"
    x:Class="YoutubeDownloader.Views.Dialogs.DownloadSingleSetupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:converters="clr-namespace:YoutubeDownloader.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:YoutubeDownloader.ViewModels.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Details  -->
        <Grid Grid.Row="0" Margin="8,16,8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image
                Grid.Column="0"
                Height="64"
                Source="{Binding Video, Converter={x:Static converters:VideoToLowestQualityThumbnailUrlConverter.Instance}}"
                Width="64" />

            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                <!--  Title  -->
                <TextBlock
                    FontSize="19"
                    FontWeight="Light"
                    Text="{Binding Title}"
                    TextTrimming="CharacterEllipsis"
                    ToolTip="{Binding Title}">
                    <TextBlock.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="{s:Action CopyTitle}" Header="Copy" />
                        </ContextMenu>
                    </TextBlock.ContextMenu>
                </TextBlock>

                <!--  Author and duration  -->
                <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            BorderThickness="1"
                            Height="16"
                            Kind="UserOutline"
                            VerticalAlignment="Center"
                            Width="16" />
                        <TextBlock
                            FontWeight="Light"
                            Margin="3,0,0,0"
                            Text="{Binding Video.Author.Title}"
                            VerticalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Margin="8,0,0,0" Orientation="Horizontal">
                        <materialDesign:PackIcon
                            BorderThickness="1"
                            Height="16"
                            Kind="ClockOutline"
                            VerticalAlignment="Center"
                            Width="16" />
                        <TextBlock
                            FontWeight="Light"
                            Margin="3,0,0,0"
                            Text="{Binding Video.Duration, TargetNullValue=Live}"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Border
            BorderBrush="{DynamicResource MaterialDesignDivider}"
            BorderThickness="0,1"
            Grid.Row="1"
            Padding="0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Video options  -->
                <Grid Grid.Column="0" Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Quality and format:" />

                    <ListBox
                        Grid.Row="1"
                        ItemsSource="{Binding AvailableVideoOptions}"
                        Margin="0,8,0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Content="{Binding Label}" GroupName="VideoOption" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

                <!--  Subtitle options  -->
                <Grid Grid.Column="1" Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Subtitles:" />

                    <ListBox
                        Grid.Row="1"
                        ItemsSource="{Binding AvailableSubtitleOptions}"
                        Margin="0,8,0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Label}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>
        </Border>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Margin="16"
            Orientation="Horizontal">
            <!--  Download  -->
            <Button
                Command="{s:Action Confirm}"
                Content="DOWNLOAD"
                IsDefault="True"
                Style="{DynamicResource MaterialDesignFlatButton}" />

            <!--  Cancel  -->
            <Button
                Command="{s:Action Close}"
                Content="CANCEL"
                IsCancel="True"
                Margin="8,0,0,0"
                Style="{DynamicResource MaterialDesignFlatButton}" />
        </StackPanel>
    </Grid>
</UserControl>